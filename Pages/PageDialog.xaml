<Page x:Class="WpfAppPractwork1.Pages.PageDialog"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfAppPractwork1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageDialog">

    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <Button Content="Открыть файл" x:Name="btnOpen" Click="btnOpen_Click"/>
            <TextBlock Text="Сохранить в файл"/>
            <TextBlock Text="Вывод на печать"/>
            <TextBlock Text="Настройки шрифта"/>
            <TextBlock Text="Настройки цвета"/>
        </StackPanel>
    </Grid>
</Page>
